@code {

    public PersonDto User { get; set; }
    public string UserPhoto { get; set; } = "";

    public string NotificationAlert { get; set; }


    private bool isSearchModalShowing = false;
    private void searchBtn_Click()
    {
        isSearchModalShowing = !isSearchModalShowing;
        StateHasChanged();
    }

    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }

    private async Task BeginToSignIn()
    {
        Navigation.NavigateTo("authentication/login");
    }

    public async Task BeforeInitialized()
    { 
        StateHasChanged();
    }

    protected override Task OnInitializedAsync()
    {
        BeforeInitialized();
        return base.OnInitializedAsync();
    }

}
